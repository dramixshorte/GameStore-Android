<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_theme_color"
    android:orientation="vertical"
    tools:context=".fragments.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="always"
            tools:ignore="UselessParent">

            <include
                android:id="@+id/include_card_top"
                layout="@layout/card_top_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/included_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/include_card_top"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:text="@string/categories"
                android:textColor="@color/menu_text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <include
                android:id="@+id/included_category"
                layout="@layout/categories_list_item"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:layout_below="@id/included_text"
                android:layout_marginTop="7dp"
                />

        </RelativeLayout>


        <TextView
            android:id="@+id/included_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:text="@string/recommended"
            android:textColor="@color/menu_text_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/main_list_view"
            android:layout_width="match_parent"
            android:layout_height="2850dp"
            android:layout_margin="5dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"
            android:paddingTop="8dp"
            android:drawSelectorOnTop="true"
            android:scrollbars="none"
            tools:listitem="@layout/home_list_item"
            tools:ignore="NestedScrolling" />


    </LinearLayout>

</ScrollView>

    <!-- Banner ad  -->
    <LinearLayout
        android:id="@+id/HomeBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1.5dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"/>

</RelativeLayout>