<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:elevation="2dp"
    android:focusable="true"
    android:foreground="@drawable/click_effects"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="10dp"
    >

    <RelativeLayout
        android:id="@+id/clicklayitem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_Tv_ImageView"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="0dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"
            app:riv_corner_radius="8dp"
            tools:ignore="ImageContrastCheck" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@id/item_Tv_ImageView"
            android:orientation="vertical">


            <TextView
                android:id="@+id/item_Tv_textView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="9dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/star_rating" />

        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="105dp"
            android:layout_height="43dp"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/play_now" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>